<?xml version="1.0" encoding="UTF-8"?><beans xmlns="http://www.springframework.org/schema/beans"	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">	<bean id="dataSource_mooc" class="com.alibaba.druid.pool.DruidDataSource"		destroy-method="close" init-method="init">		<property name="driverClassName">			<value>${jdbc.driverClassName}</value>		</property>		<property name="initialSize">			<value>10</value>		</property>		<property name="minIdle">			<value>5</value>		</property>		<property name="maxActive">			<value>20</value>		</property>		<property name="url">			<value>${jdbc.url}</value>		</property>		<property name="username">			<value>${jdbc.username}</value>		</property>		<property name="password">			<value>${jdbc.password}</value>		</property>		<property name="testWhileIdle">			<value>true</value>		</property>		<property name="testOnBorrow">			<value>false</value>		</property>		<property name="validationQuery">			<value>select 1</value>		</property>		<property name="filters" value="stat" >		</property>	</bean></beans>